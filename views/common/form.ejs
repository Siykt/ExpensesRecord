<form class="form-horizontal" method="POST" action="/post">
  <div class="form-group">
    <label for="firstname" class="col-sm-4 control-label">消费实例</label>
    <div class="col-sm-8">
      <input type="text" name="name" class="form-control" id="name" placeholder="请输入消费实例的名称">
    </div>
  </div>
  <div class="form-group">
    <label for="lastname" class="col-sm-4 control-label">单价</label>
    <div class="col-sm-8">
      <input type="text" name="money" class="form-control" id="money" placeholder="请输入单价">
    </div>
  </div>
  <div class="form-group">
    <label for="lastname" class="col-sm-4 control-label">数量</label>
    <div class="col-sm-8">
      <input type="text" name="count" class="form-control" id="count" placeholder="请输入单价">
    </div>
  </div>
  <div class="form-group">
    <label for="lastname" class="col-sm-4 control-label">总金额</label>
    <div class="col-sm-8">
      <input type="text" name="total" class="form-control" id="total" placeholder="请输入总金额" disabled>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input id="autoSumTotal" checked type="checkbox">
          <span class="text-muted user-select-none">自动计算总数</span>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-10 col-sm-2 text-left">
      <button id="submit" type="submit" class="btn btn-default">添加</button>
    </div>
  </div>
</form>